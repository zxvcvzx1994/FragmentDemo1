<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kh.myapplication.MainActivity">


    <fragment
        android:id="@+id/fragment_Top"
        android:name="com.example.kh.myapplication.Module.Fragment_Top"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        tools:layout_editor_absoluteX="72dp"

        tools:layout="@layout/fragment_top" />

    <fragment
        android:id="@+id/fragment_Bot"
        android:name="com.example.kh.myapplication.Module.Fragment_Bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:layout="@layout/fragment_bot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_Top" />
</RelativeLayout>
